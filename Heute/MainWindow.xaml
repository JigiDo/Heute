<Window x:Class="Heute.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Heute"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" VerticalAlignment="Center">
    <Grid Margin="0" Background="#FF3A3A3A">
        <Rectangle x:Name="Back" Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="110" Margin="0" Stroke="White" VerticalAlignment="Center" Width="216" RadiusY="53" RadiusX="53" MouseLeftButtonDown="Back_MouseLeftButtonDown"/>
        <Ellipse x:Name="Dot" HorizontalAlignment="Center" Height="105" Stroke="Black" VerticalAlignment="Center" Width="100" Fill="#FFCFCCCC" MouseLeftButtonDown="Ellipse_MouseLeftButtonDown"/>
        <Label x:Name="Text" Content="За работу" HorizontalAlignment="Left" Margin="336,113,0,0" VerticalAlignment="Top" Width="110" FontSize="22" Foreground="#FFF9F9F9"/>

    </Grid>
</Window>
